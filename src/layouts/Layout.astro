---
import '../styles/global.css';
import '@fontsource/roboto/400.css';
import '@fontsource/roboto/700.css';

import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- meta tags -->
		<meta name="description" content="Agencia de viajes y transporte terrestre" />
		<meta name="author" content="Terramovil" />
		<meta name="keywords" content="viajes, transporte terrestre, Terramovil, PerÃº" />
		<meta name="robots" content="index, follow" />

		<!-- open graph
		<meta property="og:title" content="Terramovil" />
		<meta property="og:description" content="Agencia de viajes y transporte terrestre" />
		<meta property="og:image" content="https://terramovil.com.pe/og-image.jpg" />
		<meta property="og:url" content="https://terramovil.com.pe/" />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Terramovil" /> -->

		<title>{title}</title>
	</head>

	<body class="h-full w-full antialiased">
		<Header />

		<main class="overflow-x-hidden">
			<slot />
		</main>

		<Footer />
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
	}
</style>
