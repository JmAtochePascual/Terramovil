---
import { Image } from 'astro:assets';
import type { TerminalItem } from '@interfaces/components';

interface Props extends TerminalItem {}

const { name, address, phone, image, iconAddress, iconPhone } = Astro.props;
---

<article
	class="group flex h-full flex-col overflow-hidden rounded-xl bg-white shadow-md transition-all hover:shadow-xl sm:flex-row">
	<div class="relative h-48 overflow-hidden sm:h-auto sm:w-2/5 lg:w-1/3">
		<Image
			src={image}
			alt={`Terminal Terramovil en ${name}`}
			width={300}
			height={300}
			class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
		/>
	</div>

	<div class="flex flex-1 flex-col justify-center gap-4 p-4 sm:w-3/5 lg:w-2/3">
		<h3 class="text-xl font-bold text-gray-900">
			{name}
		</h3>

		<div class="flex flex-col gap-3 text-sm text-gray-600">
			<div class="flex items-start gap-3">
				<Image src={iconAddress} alt="Dirección" width={20} height={20} class="mt-0.5 h-5 w-5 shrink-0" />
				<p class="leading-relaxed">{address}</p>
			</div>

			<div class="flex items-center gap-3">
				<Image src={iconPhone} alt="Teléfono" width={20} height={20} class="h-5 w-5 shrink-0" />
				<p class="font-medium">{phone}</p>
			</div>
		</div>
	</div>
</article>
