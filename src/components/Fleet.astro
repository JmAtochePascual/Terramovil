---
import { Image } from 'astro:assets';
import type { FleetSectionData } from '@interfaces/components';

interface Props extends FleetSectionData {}

const { eyebrow, title, description, items } = Astro.props;
---

<section class="w-full bg-gray-50/50 py-16 md:py-20 lg:py-32">
	<div class="max-w-container mx-auto flex w-[95%] flex-col gap-12">
		<div class="mx-auto flex max-w-2xl flex-col items-center gap-3 text-center">
			<span class="text-primary text-lg font-bold tracking-wider">
				{eyebrow}
			</span>
			<h2 class="text-3xl leading-tight font-bold text-gray-900 md:text-5xl">
				{title}
			</h2>
			<p class="mt-2 max-w-2xl text-lg text-gray-600">
				{description}
			</p>
		</div>

		<div class="grid grid-cols-1 gap-6 lg:grid-cols-2 lg:gap-8">
			{
				items.map((item) => (
					<article class="group relative flex h-full flex-col overflow-hidden rounded-2xl border border-gray-100 bg-white shadow-sm transition-all hover:shadow-xl sm:flex-row">
						<div class="relative z-10 flex w-full flex-col justify-between p-6 sm:w-1/2 lg:p-8">
							<div>
								<span class="text-primary mb-2 block text-xs font-bold tracking-wide uppercase">{item.service}</span>

								<h3 class="mb-3 text-xl font-bold text-gray-900">{item.title}</h3>

								<p class="mb-6 text-sm leading-relaxed text-gray-600">{item.description}</p>
							</div>

							<div>
								<a href={item.link} class="group/link text-primary inline-flex items-center gap-2">
									Ver caracter√≠sticas
									<svg
										xmlns="http://www.w3.org/2000/svg"
										viewBox="0 0 20 20"
										fill="currentColor"
										class="h-4 w-4 transition-transform group-hover/link:translate-x-1">
										<path
											fill-rule="evenodd"
											d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
											clip-rule="evenodd"
										/>
									</svg>
								</a>
							</div>
						</div>

						<div class="relative min-h-[250px] w-full overflow-hidden sm:min-h-0 sm:w-1/2">
							<Image
								src={item.image}
								alt={item.altImage}
								class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 group-hover:scale-110"
								width={600}
							/>
							<div class="absolute inset-0 bg-black/5" />
						</div>
					</article>
				))
			}
		</div>
	</div>
</section>
