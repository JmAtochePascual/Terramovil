---
import type { ImageMetadata } from 'astro';

interface Props {
	title: string;
	span: string;
	description: string;
	backgroundImage: ImageMetadata;
}

const { title, span, description, backgroundImage } = Astro.props;
---

<section
	class="relative w-full bg-cover bg-center bg-no-repeat py-36 md:py-44"
	style={`background-image: url(${backgroundImage.src})`}>
	<div class="absolute inset-0 z-0 bg-linear-to-r from-[#000]/60 to-transparent"></div>

	<div class="max-w-container relative z-10 mx-auto w-11/12">
		<div class="flex max-w-[684px] flex-col gap-4">
			<h1 class="max-w-[600px] text-4xl text-white uppercase md:text-7xl lg:text-7xl">
				{title}
				<span class="text-primary">{span}</span>
			</h1>
			<p class="max-w-[540px] text-white">{description}</p>
		</div>
	</div>
</section>
