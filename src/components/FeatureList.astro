---
import { Image } from 'astro:assets';
import type { FeatureGridData } from '@interfaces/components';

interface Props extends FeatureGridData {
	reversed?: boolean;
}

const { eyebrow, title, description, image, imageAlt, items, reversed = false } = Astro.props;
---

<div class="max-w-container mx-auto grid w-[95%] gap-12 lg:grid-cols-2 lg:items-center lg:gap-6">
	<div class={`flex flex-col gap-6 max-w-[540px] ${reversed ? 'lg:order-last' : ''}`}>
		<div class="flex flex-col gap-4">
			<span class="text-primary text-lg font-bold tracking-wider">
				{eyebrow}
			</span>
			<h2 class="text-3xl leading-tight font-bold text-gray-900 md:text-5xl">
				{title}
			</h2>
			<p class="text-lg leading-relaxed text-gray-600">
				{description}
			</p>
		</div>

		<div class="flex flex-col gap-8">
			{
				items.map((item) => (
					<div class="flex flex-col gap-4 md:flex-row">
						<div class="shrink-0">
							<Image src={item.icon} alt="" width={32} height={32} class="h-8 w-8" />
						</div>

						<div class="flex flex-col gap-2">
							<h3 class="text-xl font-bold text-gray-900">{item.title}</h3>
							<p class="leading-relaxed text-gray-600">{item.description}</p>
						</div>
					</div>
				))
			}
		</div>
	</div>

	<div class="relative h-full w-full">
		<Image
			src={image}
			alt={imageAlt}
			class="h-full min-h-[400px] w-full rounded-2xl object-cover shadow-xl lg:min-h-[600px]"
			width={1200}
		/>
	</div>
</div>
