---
import { Image } from 'astro:assets';
import type { FeatureGridData } from '@interfaces/components';

interface Props extends FeatureGridData {
	reversed?: boolean;
}

const { eyebrow, title, description, image, imageAlt, items, reversed = false } = Astro.props;
---

<section class="max-w-container mx-auto grid w-[95%] gap-12 lg:grid-cols-2 lg:items-center">
	<div class={`flex flex-col gap-10 ${reversed ? 'lg:order-last' : ''}`}>
		<div class="flex flex-col gap-4">
			<span class="text-primary text-lg font-bold tracking-wide">
				{eyebrow}
			</span>
			<h2 class="text-3xl leading-tight font-bold text-gray-900 md:text-4xl lg:text-5xl">
				{title}
			</h2>
			<p class="leading-relaxed text-gray-600 lg:text-lg">
				{description}
			</p>
		</div>

		<div class="grid gap-x-6 gap-y-8 sm:grid-cols-2">
			{
				items.map((item) => (
					<div class="flex flex-col gap-3">
						<div class="flex h-12 w-12 items-center justify-center rounded-lg bg-gray-50">
							<Image src={item.icon} alt={`Icono de ${item.title}`} width={32} height={32} class="h-8 w-8" />
						</div>

						<div class="flex flex-col gap-1">
							<h3 class="text-lg font-bold text-gray-900">{item.title}</h3>
							<p class="text-sm leading-relaxed text-gray-600">{item.description}</p>
						</div>
					</div>
				))
			}
		</div>
	</div>

	<div class="relative h-full w-full">
		<Image
			src={image}
			alt={imageAlt}
			class="h-full min-h-[400px] w-full rounded-2xl object-cover shadow-xl md:aspect-video lg:aspect-square lg:min-h-auto"
			width={800}
		/>
	</div>
</section>
