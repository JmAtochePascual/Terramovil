---
import { Image } from 'astro:assets';

import type { DestinationItem } from '@interfaces/components';

interface Props extends DestinationItem {}

const { city, region, tagline, image } = Astro.props;
---

<article
	class="group flex h-full flex-col overflow-hidden rounded-lg bg-white shadow-md transition-shadow hover:shadow-lg">
	<div class="overflow-hidden">
		<Image
			src={image}
			alt={`Viaja a ${city}`}
			width={400}
			class="h-56 w-full object-cover transition-transform duration-500 group-hover:scale-105"
		/>
	</div>

	<div class="flex flex-1 flex-col justify-between p-5">
		<div>
			<div class="mb-2 flex items-center justify-between">
				<span class="text-primary text-xs font-bold">
					{region}
				</span>
				<svg
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					class="text-primary h-4 w-4">
					<path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
					<circle cx="12" cy="10" r="3"></circle>
				</svg>
			</div>

			<h3 class="mb-1 text-xl font-extrabold text-gray-900 uppercase">
				{city}
			</h3>

			<p class="text-sm text-gray-500">
				{tagline}
			</p>
		</div>
	</div>
</article>
