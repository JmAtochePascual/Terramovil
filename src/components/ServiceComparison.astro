---
import type { ServiceComparisonData } from '@interfaces/components';

interface Props extends ServiceComparisonData {}

const { eyebrow, title, mainDescription, services } = Astro.props;
---

<section class="py-12 lg:py-24">
	<div class="max-w-container mx-auto w-[95%]">
		<div class="grid grid-cols-1 items-center gap-10 lg:grid-cols-12 lg:gap-16">
			<div class="lg:sticky lg:top-32 lg:col-span-5">
				<span class="text-primary mb-3 block font-bold tracking-wider">
					{eyebrow}
				</span>
				<h2 class="text-3xl leading-tight font-extrabold text-gray-900 md:text-4xl lg:text-5xl">
					{title}
				</h2>
			</div>

			<div class="flex flex-col gap-10 lg:col-span-7">
				<p class="text-lg leading-relaxed text-gray-600">
					{mainDescription}
				</p>

				<div class="grid grid-cols-1 gap-x-8 gap-y-10 border-t border-gray-100 pt-4 md:grid-cols-2 lg:pt-8">
					{
						services.map((service) => (
							<div class="flex flex-col gap-3">
								<h3 class={`text-primary text-2xl font-bold`}>{service.title}</h3>
								<p class="leading-relaxed text-gray-600">{service.description}</p>
							</div>
						))
					}
				</div>
			</div>
		</div>
	</div>
</section>
